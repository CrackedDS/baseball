<div class="panel panel-info">
  <div class="panel-heading">
    <h3> User Management <a href="<%= add_team_url%>" class="btn btn-primary pull-right">Add Team</a></h3>

    
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <h4>My Teams</h4>

        <% if @teams.size > 0 %>
          <% @teams.each do |team| %>
            <h3 class="centered"> <%= team.first %> </h3>
            <table class="table table-bordered">
              <tr>
                <th>Player Name </th>
                <th>Games Played</th>
              </tr>

              <% team.second.each do |row| %>
                <tr>
                  <td><%= "#{row[0]} #{row[1]}" %></td>
                  <td><%= row[3].to_i %></td>
                </tr>
              <% end %>
            </table>
          <% end %>
        <% else %>
          No teams found.
        <% end %>
      </div>
    </div>
  </div>
</div>