<div class="panel panel-info">
  <div class="panel-heading">
    <h3>Add Team</h3>
  </div>

  <div class="panel-body">
    <%= bootstrap_form_tag url: "create_team", method: "post" do |f| %>
      <%= f.text_field :player_name, label: "Player Name (autocomplete)" %>
      <%= f.text_field :team_name, label: "Team Name" %>
      <%= f.select :selected_players, [], {}, { class: "selectpicker", multiple: true } %>

      <%= f.submit "Create Team" %>
    <% end %>

  </div>
</div>