<div class="panel panel-info">
  <div class="panel-heading">
    <h3> Player Value Results </h3>
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <h4 class="centered">Value</h4>

        <table class="table table-bordered datatable-nopaging">
          <thead>
            <tr>
              <th>Player Name</th>
              <th>Value</th>
              <th>Team</th>
              <th>Batting</th>
              <th>Fielding</th>
              <th>Pitching</th>
              <th>Salary</th>
            </tr>
          </thead>

          <tbody>
            <% @results.each do |row| %>
              <tr>
                <td><%= "#{row[1]} #{row[2]}" %></td>
                <td><%= row[3].round(2) %></td>
                <td><%= row[4] %></td>
                <td><%= row[5].round(2) %></td>
                <td><%= row[6].round(2) %></td>
                <td><%= row[7].round(2) %></td>
                <td><%= row[8].round(2) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>