<div class="panel panel-info">
  <div class="panel-heading">
    <h3>Season Simulation</h3>
  </div>

  <div class="panel-body centered">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <table class="table table-bordered datatable-nopaging">
          <thead>
            <tr>
              <th>Team</th>
              <th>Record</th>
            </tr>
          </thead>

          <tbody>
            <% @standings.each do |row| %>
              <tr>
                <td><%= row[0] %></td>
                <td><%= row[1][0] %>-<%= row[1][1] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <table class="table table-bordered datatable">
          <thead>
            <tr>
              <th>Team 1</th>
              <th>Score 1</th>
              <th>Team 2</th>
              <th>Score 2</th>
              <th>Winner</th>
            </tr>
          </thead>

          <tbody>
            <% @res.results.each do |row| %>
              <tr>
                <td><%= row[0] %></td>
                <td><%= row[2].to_i %></td>
                <td><%= row[1] %></td>
                <td><%= row[3].to_i %></td>
                <td><%= row[4] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>