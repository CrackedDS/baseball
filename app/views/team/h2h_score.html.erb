<div class="panel panel-info">
  <div class="panel-heading">
    <h3> Head to Head Score Prediction </h3>
  </div>

  <div class="panel-body">
    <%= bootstrap_form_tag url: "h2h_score_results", method: "post" do |f| %>

      <div class="row centered">
        <div class="col-xs-6">
          <%= f.select :team1, @teams, { label: "Team 1:", :prompt => "Select a team"}, { class: "h2h-team-select-1" } %>
        </div>

        <div class="col-xs-6">
          <%= f.select :team2, @teams, { label: "Team 2:", :prompt => "Select a team" }, { class: "h2h-team-select-2" } %>
        </div>
      </div>

      <div class="row centered">
        <div class="col-xs-6">
          <%= f.select :year1, [], { label: "Year 1:", :prompt => "Select a year"}, { class: "year-select-1" } %>
        </div>

        <div class="col-xs-6">
          <%= f.select :year2, [], { label: "Year 2:", :prompt => "Select a year" }, { class: "year-select-2" } %>
        </div>
      </div>
      
      <div class="row centered">
        <div class="col-xs-12">
          <%= f.submit "Analyze" %>
        </div>
      </div>
      
    <% end %>

  </div>
</div>