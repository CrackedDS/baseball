          {
            name: @teams[0], data: [
              ["Home Runs", @stats1.results[0][7].to_i], ["Hits", @stats1.results[0][8].to_i], ["RBI", @stats1.results[0][9].to_i],
              ["Strikeouts", @stats1.results[0][10].to_i]
