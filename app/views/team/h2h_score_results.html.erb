<div class="panel panel-info">
  <div class="panel-heading">
    <h3> Head to Head Score Prediction </h3>
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <table class="table table-bordered datatable-nopaging">
          <thead>
            <tr>
              <th><%= @teams[0] %></th>
              <th><%= @teams[1] %></th>
            </tr>
          </thead>

          <tbody>
            <% @result.results.each do |row| %>
              <tr>
                <td><%= row[2].to_i %></td>
                <td><%= row[3].to_i %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3> Team Statistics </h3>
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <h4 class="centered">Pitching Statistics</h4>
        <%= column_chart [
          {
            name: @teams[0], data: [
              ["Home Runs Allowed", @stats1.results[0][0].to_i], ["Strikeouts", @stats1.results[0][1].to_i], ["Shutouts", @stats1.results[0][2].to_i],
              ["Walks", @stats1.results[0][3].to_i]
